<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/Constraint"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:backgroundTint="#000000"
    android:background="#000000"
    tools:context=".FoodActivity">

    <Button
        android:id="@+id/btnGoWord"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginStart="16dp"
        android:backgroundTint="#000000"
        android:onClick="btnClick"
        android:tag="Go"
        android:text="@string/Go"
        app:layout_constraintBottom_toBottomOf="@+id/btnCome"
        app:layout_constraintStart_toEndOf="@+id/btnGet"
        tools:ignore="SpeakableTextPresentCheck" />

    <Button
        android:id="@+id/btnStop"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginStart="16dp"
        android:backgroundTint="#000000"
        android:onClick="btnClick"
        android:tag="stop"
        android:text="stop"
        app:layout_constraintBottom_toBottomOf="@+id/btnCome"
        app:layout_constraintStart_toEndOf="@+id/btnGoWord"
        tools:ignore="SpeakableTextPresentCheck" />

    <Button
        android:id="@+id/btnGo"
        android:layout_width="113dp"
        android:layout_height="49dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:backgroundTint="#2AD324"
        android:onClick="go"
        android:text="@string/Go"
        android:textColor="#000000"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtSentence"
        android:layout_width="0dp"
        android:layout_height="62dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:background="#FFFFFF"
        android:text=""
        app:layout_constraintEnd_toStartOf="@+id/btnDelete"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnDelete"
        android:layout_width="113dp"
        android:layout_height="49dp"
        android:layout_marginEnd="16dp"
        android:backgroundTint="#FF7B23"
        android:onClick="delete"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:text="@string/Delete"
        android:textColor="#000000"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnGo" />

    <Button
        android:id="@+id/btnClear"
        android:layout_width="113dp"
        android:layout_height="49dp"
        android:layout_marginEnd="16dp"
        android:backgroundTint="#FD0000"
        android:onClick="clear"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:text="@string/Clear"
        android:textColor="#000000"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnDelete" />

    <Button
        android:id="@+id/btnIs"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:backgroundTint="#000000"
        android:onClick="btnClick"
        android:tag="is"
        android:text="@string/Is"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtSentence"
        tools:ignore="SpeakableTextPresentCheck" />

    <Button
        android:id="@+id/btnDo"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginStart="16dp"
        android:backgroundTint="#000000"
        android:onClick="btnClick"
        android:tag="do"
        android:text="@string/Do"
        app:layout_constraintBottom_toBottomOf="@+id/btnIs"
        app:layout_constraintStart_toEndOf="@+id/btnIs"
        tools:ignore="SpeakableTextPresentCheck" />

    <Button
        android:id="@+id/btnNeed"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginStart="16dp"
        android:backgroundTint="#000000"
        android:onClick="btnClick"
        android:tag="need"
        android:text="@string/Need"
        app:layout_constraintBottom_toBottomOf="@+id/btnDo"
        app:layout_constraintStart_toEndOf="@+id/btnDo"
        tools:ignore="SpeakableTextPresentCheck" />


    <Button
        android:id="@+id/btnHave"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:backgroundTint="#000000"
        android:onClick="btnClick"
        android:tag="have"
        android:text="@string/Have"
        app:layout_constraintStart_toEndOf="@+id/btnNeed"
        app:layout_constraintTop_toBottomOf="@+id/txtSentence"
        tools:ignore="SpeakableTextPresentCheck" />

    <Button
        android:id="@+id/btnWant"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:backgroundTint="#000000"
        android:onClick="btnClick"
        android:tag="want"
        android:text="@string/Want"
        app:layout_constraintStart_toEndOf="@+id/btnHave"
        app:layout_constraintTop_toBottomOf="@+id/txtSentence"
        tools:ignore="SpeakableTextPresentCheck" />

    <Button
        android:id="@+id/btnCome"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="12dp"
        android:backgroundTint="#000000"
        android:onClick="btnClick"
        android:tag="come"
        android:text="@string/Come"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnIs"
        tools:ignore="SpeakableTextPresentCheck" />

    <Button
        android:id="@+id/btnGet"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginStart="16dp"
        android:backgroundTint="#000000"
        android:onClick="btnClick"
        android:tag="get"
        android:text="@string/Get"
        app:layout_constraintBottom_toBottomOf="@+id/btnCome"
        app:layout_constraintStart_toEndOf="@+id/btnIs"
        tools:ignore="SpeakableTextPresentCheck" />

</androidx.constraintlayout.widget.ConstraintLayout>